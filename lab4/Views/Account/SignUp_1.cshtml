@model lab4.ViewModel.RegisterModel1
@{
    ViewData["Title"] = "Sign Up";
}

<h1>Sign Up</h1>
<br />
<form method="post">

    <div class="firstName">
        <label asp-for="FirstName" class="font-weight-bold" style="margin:0px 0 -5px 0;"></label><br />
        <input type="text" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="lastName">
        <label asp-for="LastName" class="font-weight-bold" style="margin:8px 0 -5px 0;"></label><br />
        <input type="text" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="birthday">
        <label asp-for="Birthday" class="font-weight-bold" style="margin:8px 0 -5px 0;"></label><br />
        <input type="date" asp-for="Birthday" />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>

    <div class="gender">
        <label asp-for="Gender" class="font-weight-bold" style="margin:8px 0 -5px 0;"></label><br />
        <input asp-for="Gender" name="gender" type="radio" value="Male" /> Male <br />
        <input asp-for="Gender" name="gender" type="radio" value="Female" /> Female <br />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="Sign Up" class="btn btn-outline-primary" style="margin: 5px 0 0 0;" />
</form>

